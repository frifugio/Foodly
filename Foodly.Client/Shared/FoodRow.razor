@using Foodly.Shared

<div class="d-inline-block">
    <p>@Food.Name</p>

    <table>
        <tr>
            @{ int actualCount = Food.ActualQuantity; }

            @for (int i = 0; i < Food.MaxQuantity; i++)
            {
                <td>
                    @if (actualCount-- > 0)
                    {
                        <input type="checkbox" checked />
                    }
                    else
                    {
                        <input type="checkbox" />
                    }
                </td>
            }
            @for (int i = 0; i < Food.OptionalQuantity; i++)
            {
                <td>
                    @if (actualCount-- > 0)
                    {
                        <input class="optional-check" type="checkbox" checked />
                    }
                    else
                    {
                        <input class="optional-check" type="checkbox" />
                    }
                </td>
            }
        </tr>
    </table>
</div>

@code {

    [Parameter]
    public Food Food { get; set; }

}
